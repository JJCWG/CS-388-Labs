<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/senderIv"
        android:layout_width="136dp"
        android:layout_height="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="3dp"
        tools:src="@drawable/olimar" />

    <TextView
        android:id="@+id/senderTv"
        android:textStyle="bold"
        android:textColor="#00ccff"
        android:textColorLink="#8DE67F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hedwig" />

    <TextView
        android:id="@+id/titleTv"
        android:textStyle="bold"
        android:typeface="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senderTv"
        tools:text="Help on Assignment #2" />

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#5566dd"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/titleTv"
        app:layout_constraintStart_toEndOf="@+id/senderTv"
        tools:text="2/1/24" />

    <TextView
        android:id="@+id/summaryTv"
        android:textStyle="normal"
        android:textColor="#aacc00"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTv"
        tools:text="Have you been able to finish the latest assignment? I'm stuck on the 3rd step and don't quite know what's wrong." />
</androidx.constraintlayout.widget.ConstraintLayout>